@model RoleViewModel

<div class="modal fade" id="newFormModal" tabindex="-1" role="dialog" aria-labelledby="newFormModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@(Model.Id == Guid.Empty ? UI.NewRole : UI.EditRole)</h5>
            </div>
            <div class="modal-body" >
                <form class="form" asp-action="Save" asp-controller="Role"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-begin="onBegin"
                      data-ajax-success="onSuccess"
                      data-ajax-failure="onFailure"
                      id="roleSave">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Version" />
                    <div class="card-body" style="padding-left:0;padding-right:0;">
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-lg-12 d-flex justify-content-end">
                                <div class="checkbox-inline">
                                    <label class="checkbox checkbox-outline checkbox-success">
                                        <input type="checkbox" asp-for="IsSuperAdmin" />
                                        <span></span>@UI.IsSuperAdmin
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-end" style="padding-left:0;padding-right:0;">
                        @(Html.DevExtreme().Button()
                                    .ID("button")
                                    .Text(UI.Save)
                                    .ElementAttr("class", "btn btn-primary mr-2")
                                    .UseSubmitBehavior(true)
                                )
                        <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">@UI.Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>